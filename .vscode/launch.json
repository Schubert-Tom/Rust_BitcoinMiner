  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Cargo launch",
      "cargo": {
        "args": ["build", "--lib"]
      },
      "program": "${cargo:program}",
      "args": []
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'rust_miner'",
      "cargo": {
        "args": ["build", "--bin=rust_miner", "--package=rust_miner"],
        "filter": {
          "name": "rust_miner",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'rust_miner'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=rust_miner",
          "--package=rust_miner"
        ],
        "filter": {
          "name": "rust_miner",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
